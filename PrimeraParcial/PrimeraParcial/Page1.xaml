                                   IsClippedToBounds="True">
                                    <Image Source="female1.jpg"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                                </Frame>
                            </StackLayout>
                        </StackLayout>
                    </Frame>

